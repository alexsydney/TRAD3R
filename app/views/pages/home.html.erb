<br>
  <h4></h4>
  <div class="row">
        <% @avatars.each do |avatar| %>
        <div class="col-md-4 col-6">
          <div class="card">
          <%= image_tag avatar.src, class: "card-img-top"%>
          <div class="card-body">
            <h5 class="card-title"><%= link_to avatar.name, avatar_path(avatar.id) %></h5>
            <p><strong>ID: </strong><%= avatar.id %></p>
            <p class="card-text"><%= avatar.description %></p>
            <% if avatar.is_sale %>
            <% end %>
          </div>

            <% if avatar.is_sale? %>
              <div class="buy-buttons">
                <p class="coin"><img src="https://orig00.deviantart.net/712c/f/2010/236/2/e/spinning_coin___animation_by_mantastic001.gif"><span><%= avatar.value %></span></p>
                <button type="button" id="buy" class="btn btn-primary btn-raised" name="button">BUY NOW</button>
                <%= link_to "VIEW", avatar_path(avatar.id), class:"btn btn-primary" %>
              </div>

            <% else %>
          <button class="btn btn-danger">SOLD OUT</button>
            <% end %>

          </div>
        </div>
          <% end %>
  </div>
